[Unit]
Description=randcli
Requires=network-online.target
After=network-online.target

[Service]
Restart=on-failure
User=randd
Group=randd
PermissionsStartOnly=true
ExecStart=/usr/bin/randcli rest-server --laddr {{RANDCLI_ADDRESS}}
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target

